<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="room_shift_wizard_view_form" model="ir.ui.view">
        <field name="name">room.shift.wizard.view.form</field>
        <field name="model">room.shift.wizard</field>
        <field name="arch" type="xml">
            <form string="Shift Room">
                <group>
                    <field name="current_room_id"/>
                    <field name="new_room_id"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_shift_room" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="room_shift_wizard_view_action" model="ir.actions.act_window">
    <field name="name">Shift Room</field>
    <field name="res_model">room.shift.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>


</odoo>
